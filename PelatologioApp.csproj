<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWindowsForms>true</UseWindowsForms>
    <ImplicitUsings>enable</ImplicitUsings>

    <!-- Εικονίδιο εφαρμογής -->
    <ApplicationIcon>pelatologio.ico</ApplicationIcon>

    <!-- Πληροφορίες exe -->
    <AssemblyTitle>PelatologioApp</AssemblyTitle>
    <Company>Stelios Kyrikos</Company>
    <Product>PelatologioApp</Product>
    <Description>Εφαρμογή διαχείρισης πελατών και ραντεβού</Description>
    <Version>1.0.0.0</Version>
    <FileVersion>1.0.0.0</FileVersion>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="pelatologio.ico" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Dapper" Version="2.1.66" />
    <PackageReference Include="System.Data.SQLite.Core" Version="1.0.119" />
  </ItemGroup>

</Project>
